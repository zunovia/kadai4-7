<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>メンバー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_image, size: '50x50' %></td>
        <td><%= link_to group.name, group_path(group),class: "group_#{group.id}" %></td>
        <td><%= group.users.count %></td>

          <%= link_to 'Show', group, class: "group_#{group.id}" %></td>
        <td><% if group.is_owned_by?(current_user) %>
              <%= link_to 'Edit', edit_group_path(group), class: "group_#{group.id}" %>
                <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>